{
  "name": "pokeapi",
  "description": "",
  "version": "1.0.0",
  "author": "Edmundo Rodrigues <rdsedmundo@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint \"./src/**/*.js\" \"./src/**/*.vue\" \"webpack.config.js\"",
    "test": "jest --coverage",
    "test-dev": "jest --coverage --watch --onlyChanged"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ]
  },
  "dependencies": {
    "await-to-js": "^1.0.1",
    "axios": "^0.15.3",
    "babel-polyfill": "^6.23.0",
    "flexboxgrid": "git://github.com/rdsedmundo/flexboxgrid#7.0.0",
    "lodash": "^4.17.4",
    "md5": "^2.2.1",
    "normalize.css": "^5.0.0",
    "vue": "^2.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.5",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-3": "^6.22.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.2",
    "sass-loader": "^5.0.1",
    "vue-loader": "^11.0.0",
    "vue-template-compiler": "^2.1.0",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-dotenv-plugin": "^2.0.0"
  }
}
